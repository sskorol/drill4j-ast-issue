{
  "sources": {
    "pattern": [
      "src/**/*.ts"
    ],
    "ignore": [
      "src/**/*.d.ts",
      "src/**/polyfills.ts"
    ]
  },
  "bundle": {
    "pattern": "dist/**/*.js",
    "ignore": ["dist/**/polyfills.js"]
  },
  "sourcemaps": {
    "pattern": [
      "dist/**/*.js.map"
    ],
    "ignore": ["dist/**/polyfills.js.map"]
  },
  "output": {
    "agentId": "default-agent-id",
    "groupId": "default-group-id",
    "agentApiUrl": "http://localhost:9404"
  }
}
